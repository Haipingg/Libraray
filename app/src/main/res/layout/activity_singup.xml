<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户注册界面"
        android:textSize="25dp"
        android:textColor="#00BFFF"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edt_UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户帐号"
        android:layout_marginBottom="10dp"
        />
    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:id="@+id/rgbtn_boy"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:id="@+id/rgbtn_girl"/>
    </RadioGroup>

    <EditText
        android:id="@+id/edt_pwd_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入登陆密码"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/edt_pwd_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认登陆密码"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edt_sms"
            android:hint="请输入短信验证码"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"
            android:ems="14"
            />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#00BFFF"
            android:text="发送短信验证码"
            android:textColor="#fff"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgv_email"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_updata"
            android:layout_width="240dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:background="#cfc"
            android:onClick="deleteOnClick"
            android:text="注册" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center">
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="返回登录界面"
            android:textColor="#1783e3"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>